pipeline {
    agent any
    options {
        timeout(time: 1, unit: 'HOURS') 
    }
    stages {
        stage('first stage') {
            steps {
                echo 'we want to Build hello_world example file'
		sh 'virtualenv venv && . venv/bin/activate && pip install -r requirements.txt && hello.py'
            }
        }
    }
}
